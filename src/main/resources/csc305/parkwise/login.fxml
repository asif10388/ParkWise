<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F4FFF3;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc305.parkwise.Common.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="398.0" prefWidth="600.0">
         <children>
            <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="200.0">
               <children>
                  <Label text="ParkWise" textFill="#181c32">
                     <font>
                        <Font name="Noto Sans Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <VBox prefHeight="73.0" prefWidth="198.0">
                     <children>
                        <Label text="User ID">
                           <VBox.margin>
                              <Insets bottom="4.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Noto Sans Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="userIdInput" />
                     </children>
                  </VBox>
                  <VBox prefHeight="49.0" prefWidth="198.0">
                     <children>
                        <Label text="Password">
                           <VBox.margin>
                              <Insets bottom="4.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Noto Sans Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="passwordInput" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#onLoginButtonClick" style="-fx-background-color: #5F8D4E;" text="Login" textFill="WHITE">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Noto Sans Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="4.0" left="20.0" right="20.0" top="4.0" />
                     </padding>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
